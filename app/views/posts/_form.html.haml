= form_for [@topic, @post], :remote => true do |f|
  -if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_area :content, :class => "kind_editor", :id => "kind_editor#{@post.id}"
  .actions
    = f.submit 'Save'
- if @post.new_record?
  = render "assets/upload_tool"
= render "shared/editor"

