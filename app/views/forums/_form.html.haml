= form_for [@section, @forum] do |f|
  -if @forum.errors.any?
    #error_explanation
      %h2= "#{pluralize(@forum.errors.count, "error")} prohibited this forum from being saved:"
      %ul
        - @forum.errors.full_messages.each do |msg|
          %li= msg

  .title
    .left= f.label :title
    .left= f.text_field :title
    .clear
  = f.label :description
  = f.text_area :description, :class => "kind_editor", :id => "kind_editor"
  = f.submit 'Save'
= render "shared/editor"

